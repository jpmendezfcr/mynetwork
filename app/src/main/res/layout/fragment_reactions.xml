<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPageBackground" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_body" >

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@color/colorDialogTitleBackground" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reaction_all_button"
                    style="@style/MyRippleStyleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/spacing_middle"
                        android:paddingHorizontal="@dimen/spacing_medium"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/likes_count_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:text="@string/label_all"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorDialogTitleText" />

                        </LinearLayout>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reaction_0_button"
                    style="@style/MyRippleStyleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/reaction_0_icon"
                                android:layout_height="32dp"
                                android:layout_width="32dp"
                                android:clickable="false"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                app:srcCompat="@drawable/ic_reaction_0" />

                            <TextView
                                android:text="123"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reaction_0_count"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorDialogTitleText"
                                android:clickable="false" />

                        </LinearLayout>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reaction_1_button"
                    style="@style/MyRippleStyleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/reaction_1_icon"
                                android:layout_height="32dp"
                                android:layout_width="32dp"
                                android:clickable="false"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                app:srcCompat="@drawable/ic_reaction_1" />

                            <TextView
                                android:text="12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reaction_1_count"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorDialogTitleText"
                                android:clickable="false" />

                        </LinearLayout>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reaction_2_button"
                    style="@style/MyRippleStyleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/reaction_2_icon"
                                android:layout_height="32dp"
                                android:layout_width="32dp"
                                android:clickable="false"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                app:srcCompat="@drawable/ic_reaction_2" />

                            <TextView
                                android:text="55"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reaction_2_count"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorDialogTitleText"
                                android:clickable="false" />

                        </LinearLayout>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reaction_3_button"
                    style="@style/MyRippleStyleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/reaction_3_icon"
                                android:layout_height="32dp"
                                android:layout_width="32dp"
                                android:clickable="false"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                app:srcCompat="@drawable/ic_reaction_3" />

                            <TextView
                                android:text="3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reaction_3_count"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorDialogTitleText"
                                android:clickable="false" />

                        </LinearLayout>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reaction_4_button"
                    style="@style/MyRippleStyleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/reaction_4_icon"
                                android:layout_height="32dp"
                                android:layout_width="32dp"
                                android:clickable="false"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                app:srcCompat="@drawable/ic_reaction_4" />

                            <TextView
                                android:text="5k"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reaction_4_count"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorDialogTitleText"
                                android:clickable="false" />

                        </LinearLayout>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/reaction_5_button"
                    style="@style/MyRippleStyleDark"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/spacing_small"
                        android:gravity="center_vertical|center_horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:id="@+id/reaction_5_icon"
                                android:layout_height="32dp"
                                android:layout_width="32dp"
                                android:clickable="false"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                app:srcCompat="@drawable/ic_reaction_5" />

                            <TextView
                                android:text="78"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/reaction_5_count"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                                android:textColor="@color/colorDialogTitleText"
                                android:clickable="false" />

                        </LinearLayout>

                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSeparator" />

        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/container_items"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="none" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/splash"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_action_favorites"
        app:tint="@color/colorIconTint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/colorIconTint"
        android:id="@+id/message"
        android:layout_below="@+id/splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />


</RelativeLayout>